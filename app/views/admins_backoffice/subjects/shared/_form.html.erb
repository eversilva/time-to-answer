<%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
    <div class="container p-0">

        <div class="mb-3">
            <%= form.label :description, class: "form-label fw-bold" %>
            <%= form.text_field :description, class: "form-control", placeholder: "Descrição" %>
        </div>

        <button class="btn btn-custom">
            <%= render_svg('send') %> Salvar
        </button>
    </div>
<% end %>