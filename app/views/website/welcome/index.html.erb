
<% if user_signed_in? %>

<h2>Lista de questões</h2>    

<p>Renderizado listagem de perguntas</p>

<%= render partial: 'website/shared/questions' %>

<div class="mt-3 d-flex justify-content-center">
    <%= paginate @questions %>
</div>

<% else %>

    <%= link_to admins_backoffice_welcome_index_path, class: 'btn btn-custom' do %>
        <%= render_svg('group') %>
        Administradores
    <% end %>

    <%= link_to user_session_path, class: 'btn btn-custom' do %>
        <%= render_svg('group') %>
        Usuários
    <% end %>

<% end %>

